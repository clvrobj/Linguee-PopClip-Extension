<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Extension Name</key>
	<string>Linguee</string>
	<key>Extension Identifier</key>
	<string>com.linguee.extension.linguee-translate</string>
	<key>Extension Description</key>
	<string>Open Linguee in a web browser with the selected text.</string>
	<key>Actions</key>
	<array>
		<dict>
			<key>URL</key>
			<string>http://www.linguee.com/english-chinese/search?query={popclip text}</string>
			<key>Image File</key>
			<string>linguee.png</string>
			<key>Title</key>
			<string>Linguee Translate</string>
			<key>Regular Expression</key>
			<string>(?s)^.{1,1900}$</string>
		</dict>
	</array>
</dict>
</plist>
